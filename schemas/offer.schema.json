{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://startupshop.dev/schemas/offer.schema.json",
  "title": "startupShopOffer",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "startup_id",
    "buyer_name",
    "buyer_email",
    "offer_amount_usd",
    "message"
  ],
  "properties": {
    "startup_id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "buyer_name": {
      "type": "string",
      "minLength": 2
    },
    "buyer_email": {
      "type": "string",
      "format": "email"
    },
    "offer_amount_usd": {
      "type": "number",
      "exclusiveMinimum": 0
    },
    "message": {
      "type": "string",
      "minLength": 5,
      "maxLength": 4000
    }
  }
}
